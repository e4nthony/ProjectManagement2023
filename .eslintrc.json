{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        /**
         * shuts down linebreak-style check,
         * circle ci runs on linux (LF), we work on windows (CRLF)
         */
        "linebreak-style": 0 , 
        "no-console": ["off"],
        "prefer-template": ["off"]
    }
}
